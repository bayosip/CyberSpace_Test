<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppButtonDark" parent="Base.Widget.AppCompat.Button">
        
        <item name="android:background">@drawable/gradiant_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/app_background_white</item>
        <item name="android:fontFamily">@font/Cabin-Regular</item>
    </style>

    <style name="TitleText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/Cabin-Regular</item>
        <item name="android:letterSpacing">2sp</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="android:ThemeOverlay.Material.Light" />

    <style name="RegularText" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/Cabin-Regular</item>
        <item name="android:letterSpacing">2sp</item>
    </style>
</resources>
